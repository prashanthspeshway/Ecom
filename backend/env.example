# Backend Environment Variables
# Copy this file to .env and update with your production values

# Server Configuration
PORT=3001
NODE_ENV=production

# Database Configuration
# Leave empty for file-based storage, or provide MongoDB connection string
# Example: mongodb://localhost:27017/ecom
# Production: mongodb+srv://username:password@cluster.mongodb.net/ecom
MONGO_URI=
DB_NAME=ecom

# Security
# IMPORTANT: Generate a strong random string for production!
# Use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=change-me-in-production-use-a-strong-random-string

# Admin Configuration
# Code users enter during registration to become admin
ADMIN_INVITE_CODE=

# Public Base URL for file uploads
# Example: https://yourdomain.com
# For S3: Leave empty if using S3 URLs
PUBLIC_BASE_URL=

# AWS S3 Configuration (optional, for file storage)
# Leave empty if using local file storage
S3_BUCKET=
S3_REGION=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=

# Frontend URL (for CORS and password reset links)
# Development: http://localhost:8080
# Production: https://yourdomain.com
FRONTEND_URL=http://localhost:8080

# Allowed CORS Origins (comma-separated, optional)
# If not set, defaults to FRONTEND_URL
# Example: https://yourdomain.com,https://www.yourdomain.com
ALLOWED_ORIGINS=

# SMTP Configuration (for Password Reset Emails)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=your-email@gmail.com

# Razorpay Configuration (for Payment Gateway)
# Get from Razorpay Dashboard: https://dashboard.razorpay.com/app/keys
# Use test keys for development, live keys for production
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=
