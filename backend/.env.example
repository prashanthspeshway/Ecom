# Backend Environment Variables
# Copy this file to .env and fill in the values

# Server port (default: 3001)
PORT=3001

# MongoDB connection string (optional - leave empty to use file-based storage)
# Example: mongodb://localhost:27017/ecom
# Or: mongodb+srv://user:password@cluster.mongodb.net/ecom
MONGO_URI=

# Database name (only used if MONGO_URI is set)
DB_NAME=ecom

# JWT secret for token signing (CHANGE THIS IN PRODUCTION!)
JWT_SECRET=change-me-in-production-use-a-strong-random-string

# Admin invite code for registration (users who register with this code become admins)
ADMIN_INVITE_CODE=

# Public base URL for file uploads (optional)
# Example: https://yourdomain.com
PUBLIC_BASE_URL=

# AWS S3 Configuration (optional - leave empty to use local file storage)
# If all S3 variables are set, uploads will go to S3 instead of local storage
S3_BUCKET=
S3_REGION=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
